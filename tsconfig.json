{
  "compilerOptions": {
    "jsx": "react",
    /* Base Options: */
    "esModuleInterop": true,
    "skipLibCheck": true,
    "target": "es2022",
    "allowJs": true,
    "resolveJsonModule": true,
    "moduleDetection": "force",
    "isolatedModules": true,
    "verbatimModuleSyntax": true,
    /* Strictness */
    "strict": true,
    "module": "Preserve",
    "noUncheckedIndexedAccess": true,
    "noImplicitOverride": true,
    "lib": ["es2022"],
    "noEmit": true
  },
  "exclude": ["**/dist", "**/tsup.config.ts"]
}
